doctype html
html
  include bootstrap_top.pug

  body
    nav(class="navbar navbar-expand-lg navbar-light bg-light")
      div(class="container-fluid")
        div(class="navbar-header")
          a(class="navbar-brand" href="/dashboard") Dashboard
        ul(class="nav navbar-nav navbar-right")         
          div(class="btn-group" role="group")    
            button(type="button" class="btn btn-outline-secondary" disabled) Logged in as #{user} (admin)
            a(href="/logout" class="btn btn-secondary" role="button") Logout
    div(class="container")
        div(class="card")
            div(class="card-body")
                h2 Create a class
                form(action="/newclass" method="post")
                  if showclassexists
                    div(class="alert alert-warning" role="alert") That class name already exists. Please pick another name.
                  div(class="form-group")
                    div(class="row align-items-center")
                      label(for="classYear" class="col-md-auto") Class Name
                      input(type="text" class="form-control col" id="className" name="name" required) 
                  button(type="submit" class="btn btn-primary") Create
               
    include bootstrap_bot.pug